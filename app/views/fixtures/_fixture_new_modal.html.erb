<!-- Button trigger modal -->
<div class="modal-svg-wrapper mt-5" id="modal-hover-btn" type="button" data-toggle="modal" data-target="#exampleModalCenter">
  <svg height="60" width="320" xmlns="http://www.w3.org/2000/svg">
    <rect class="shape" height="60" width="320" />
    <div class="modal-hover-text">Add Fixture</div>
  </svg>
</div>

<div class="modal modal-wide fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centere" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add a New Fixture</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
          <div class="container-fluid">

            <h3 class="mt-3 mb-3 d-flex justify-content-center header-spacing">Import Fixture Spreadsheet</h3>

            <div class="d-flex justify-content-center">
              <div class="import-file modal-outset">
                  <%= form_tag import_fixtures_path, multipart: true do %>
                    <%= file_field_tag :file %>
                    <%= submit_tag "Import Fixture", class: "btn btn-curious-blue" %>
                  <% end %>
              </div>
            </div>

            <h5 class="mt-3 mb-3 d-flex justify-content-center">--OR--</h5>

            <div class="mt-3 mb-3 d-flex justify-content-center">
              <button type="button" class="btn btn-lg special-btn-outline" id="modalManualBtn">
                Enter Fixture Manually
              </button>
            </div>

            <div class="container modal-hidden" style="display: none">
              <div class="d-flex justify-content-around">
                <div class='col-md-3'>
                  <%= simple_form_for @fixture, url: fixtures_path, method: :post do |f| %>
                  <%= f.input :reference_no,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Reference No.",
                              required: true %>
                </div>
                <div class="col-md-3">
                  <%= f.input :voyage_number,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Voyage No.",
                              label_html: {class: ""},
                              required: true %>
                </div>
                <div class="col-md-3">
                  <%= f.input :clause_group, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "CP Form*",
                              required: true %>
                </div>
              </div>

              <div class="d-flex justify-content-around">
                <div class='col-md-3'>
                  <%= f.input :vessel_name,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Vessel Name",
                              required: true %>
                </div>
                <div class="col-md-3">
                  <%= f.input :charterer,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Charterer",
                              required: true %>
                </div>

                <div class="col-md-3">
                  <%= f.input :contract_type, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Contract Type*",
                              label_html: {class: ""},
                              required: true %>
                </div>
              </div>

              <div class="d-flex justify-content-around">
                <div class="col-md-3">
                  <%= f.input :vessel_dwt, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Vessel DWT*",
                              label_html: {class: ""},
                              required: false %>
                </div>

                <div class="col-md-3">
                  <%= f.input :demurrage_rate,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Demurrage Rate",
                              label_html: {class: ""},
                              required: false %>
                </div>
                <div class="col-md-3">
                  <%= f.input :contract_terms, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Contract Terms*",
                              label_html: {class: ""},
                              required: false %>
                </div>
              </div>

              <div class="d-flex justify-content-around">
                <div class="col-md-3">
                  <%= f.input :total_cargo_qty, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Total Cargo Qty*",
                              required: false %>
                </div>
                <div class="col-md-3">
                  <%= f.input :allowed_laytime,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Allowed Laytime",
                              required: false %>
                </div>
                <div class="col-md-3">
                  <%= f.input :reversible, as: :fake,
                              input_html: {class: "form-control-sm edit-input"},
                              label: "Reversible",
                              required: false %>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
          <%= link_to "Cancel", fixtures_path, class: "btn btn-secondary" %>
          <!-- <%= f.button :button, "Cancel", class: "btn btn-secondary" %> -->
          <%= f.button :submit, "Create Fixture", class: "btn btn-curious-blue modal-hidden", style: "display: none" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
