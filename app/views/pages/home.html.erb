<div class="home-container">
  <div class="position-absolute mt-2 mr-3 hamburger">

    <!-- Button trigger modal
    <button type="button" class="btn btn-primary position-absolute mt-2 mr-3 hamburger" data-toggle="modal" data-target="#exampleModalCenter">
      <i class="fa fa-bars fa-1x"></i>
    </button>
  </div>

    Sign in modal
      <%= render partial: "shared/flip_modal" %> -->

    <!-- Button trigger modal  ORIGINAL -->
    <button class="btn btn-default banner-btn" type="button" data-toggle="modal" data-target="#exampleModalCenter">
      <i class="fa fa-bars fa-2x"></i>
    </button>
  </div>

    <!-- Sign in modal ORIGINAL -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content home-modal">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Sign in</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for(:user, url: session_path(:user)) do |f| %>
              <%= f.input :email, input_html: { autocomplete: 'email' } %>
              <%= f.input :password, input_html: { autocomplete: 'current-password' } %>
              <%= f.input :remember_me, as: :boolean, label: "Remember me", inline_label: true if Devise.mappings[:user] %>
              <%= link_to "Forgot your password?", "#", id: "flip1" %>
          </div>
          <div class="modal-footer">
              <%= f.button :button, "Cancel", class: "btn btn-secondary" %>
              <%= f.button :submit, "Sign In", class: "btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>


  <div class="banner">
    <div class="banner-content">
      <%= image_tag("hourglass.jpeg", class: "banner-watermark") %>
      <h1>CHRONOS</h1>
      <p>Fully automated laytime management system</p>
      <%= link_to definitions_path do %>
        <%= render "shared/blob_button" %>
      <% end %>
    </div>
  </div>
</div>
